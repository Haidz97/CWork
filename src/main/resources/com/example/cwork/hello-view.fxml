<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane hgap="10" vgap="10" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.cwork.MainController">
  <columnConstraints>
    <ColumnConstraints hgrow="SOMETIMES" />
  </columnConstraints>
  <rowConstraints>
    <RowConstraints vgrow="NEVER" />
    <RowConstraints vgrow="ALWAYS" />
  </rowConstraints>
  <children>
    <!-- Верхняя часть с полями ввода -->
    <HBox alignment="CENTER_LEFT" spacing="20">
      <children>
        <VBox alignment="TOP_CENTER" spacing="10">
          <children>
            <Label text="Название товара:" />
            <TextField fx:id="productNameField" prefWidth="150.0" />
          </children>
        </VBox>
        <VBox alignment="TOP_CENTER" spacing="10">
          <children>
            <Label text="Производитель:" />
            <ComboBox fx:id="manufacturerComboBox" prefWidth="150.0" />
          </children>
        </VBox>
        <VBox alignment="TOP_CENTER" spacing="10">
          <children>
            <Label text="Дата поступления:" />
            <DatePicker fx:id="arrivalDatePicker" />
          </children>
        </VBox>
        <VBox alignment="TOP_CENTER" spacing="10">
          <children>
            <Label text="Количество товара:" />
            <TextField fx:id="quantityField" prefWidth="50.0" />
          </children>
        </VBox>
        <VBox alignment="BOTTOM_RIGHT" spacing="10">
          <children>
            <Button mnemonicParsing="false" onAction="#addProduct" text="Добавить товар" />
          </children>
        </VBox>
        <!-- Добавляем кнопку для выбора товара и поле для количества -->
        <VBox alignment="TOP_CENTER" spacing="10">
          <children>
            <Label text="Выберите товар для продажи:" />
            <ComboBox fx:id="saleProductComboBox" prefWidth="150.0" />
          </children>
        </VBox>
        <VBox alignment="TOP_CENTER" spacing="10">
          <children>
            <Label text="Количество для продажи:" />
            <TextField fx:id="saleQuantityField" prefWidth="50.0" />
          </children>
        </VBox>
        <Button mnemonicParsing="false" onAction="#sellProduct" text="Продать товар" />
      </children>
    </HBox>

    <!-- Нижняя часть с таблицей -->
    <TableView fx:id="productTable" GridPane.columnIndex="0" GridPane.rowIndex="1">
      <columns>
        <TableColumn fx:id="nameColumn" prefWidth="125.0" text="Название" />
        <TableColumn fx:id="manufacturerColumn" prefWidth="125.0" text="Производитель" />
        <TableColumn fx:id="addressColumn" prefWidth="175.0" text="Адрес производителя" /> <!-- Новый столбец для отображения адреса производителя -->
        <TableColumn fx:id="dateColumn" prefWidth="115.0" text="Дата поступления" />
        <TableColumn fx:id="quantityColumn" prefWidth="75.0" text="Количество" />
      </columns>
    </TableView>
  </children>
</GridPane>
